{
    "manifest_version": 2,
    "name": "Unicornify",
    "version": "1.0.0",
    "description": "A WebExtension to unicornify any website.",
    "icons": {
        "48": "images/icon.png",
        "128": "images/icon128.png"
    },
    "author": "Sim Boon Long",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "browser_action": {
        "default_icon": {
            "19": "images/button.png",
            "38": "images/button38.png"
        },
        "default_title": "Unicornify"
    }
}